- var question = [{name: 'question', id: 'formQuestion', title : 'Задать вопрос', question: true,  button: 'Спросить', success: 'Ваш вопрос отправлен'}] 
- var call = [{name: 'call', id: 'formCall', title : 'Заказать звонок', call: true, button: 'Заказать звонок', success: 'Ваша заявка отправлена'}] 
- var review = [{name: 'review', id: 'formReview', title : 'Оставить отзыв', review: true, button: 'Оставить отзыв', success: 'Отзыв успешно оставлен'}] 


mixin form(items)
  each item in items
    +b.SECTION(class= 'form--' + item.name)
      +e.FORM.form(action='', method='', id= item.id)
        //- +e.A.close(href='#') Закрыть
        +e.H3.title 
          span #{item.title}
          
        //- if item.application
        //-   .form-group.field-question-production.required
        //-     +e.INPUT.input(type='text', name='Продукция', placeholder='Наименование продукции*') 
        //-     p.help-block.help-block-error Ошибка заполнения поля формы
        //-   .form-group.field-question-name.required.has-error
        //-     +e.INPUT.input(type='text', name='Имя', placeholder='Ваше имя*')
        //-     p.help-block.help-block-error Ошибка заполнения поля формы
        //-   .form-group.field-question-email.required.has-success
        //-     +e.INPUT.input(type='email', name='Email', placeholder='Ваш e-mail*')
        //-     p.help-block.help-block-error Ошибка заполнения поля формы
        //-   .form-group.field-question-phone
        //-     +e.INPUT.input(type='tel', name='Телефон', placeholder='Контактный телефон')
        //-     p.help-block.help-block-error Ошибка заполнения поля формы 

        if item.application
          .form-group.field-question-production.required
            +e.INPUT.input(type='text', name='Продукт', placeholder='Ваш продукт или услуга*') 
            p.help-block.help-block-error Ошибка заполнения поля формы
          .form-group.field-question-email.required
            +e.INPUT.input(type='text', name='Email или телефон', placeholder='Ваш e-mail или телефон*')
            p.help-block.help-block-error Ошибка заполнения поля формы

        if item.question
          .form-group.field-question-name.required.has-error
            +e.INPUT.input(type='text', name='Имя', placeholder='Ваше имя*')
            p.help-block.help-block-error Ошибка заполнения поля формы
          .form-group.field-question-email.required.has-success
            +e.INPUT.input(type='email', name='Email', placeholder='Ваш e-mail*')
            p.help-block.help-block-error Ошибка заполнения поля формы
          .form-group.required
            +e.TEXTAREA.textarea(type='text', name='Ваш вопрос', placeholder='Ваш вопрос*')
            p.help-block.help-block-error Ошибка заполнения поля формы

        if item.call
          .form-group.field-question-name.required.has-error
            +e.INPUT.input(type='text', name='Имя', placeholder='Ваше имя*')
            p.help-block.help-block-error Ошибка заполнения поля формы
          .form-group.field-question-phone.required.has-success
            +e.INPUT.input(type='tel', name='Телефон', placeholder='Контактный телефон*')
            p.help-block.help-block-error Ошибка заполнения поля формы
          //- .form-group.required
          //-   +e.time
          //-     +e.SPAN.time-text Желаемое время звонка c
          //-     +e.INPUT.input--time(type='time', name='Звонить с') 
          //-     +e.SPAN.time-text до
          //-     +e.INPUT.input--time(type='time', name='Звонить до') 
          //-   p.help-block.help-block-error Ошибка заполнения поля формы

        if item.review
          .form-group.field-question-name.required.has-error
            +e.INPUT.input(type='text', name='Компания', placeholder='Ваша компания*')
            p.help-block.help-block-error Ошибка заполнения поля формы
          .form-group.field-question-email.required.has-success
            +e.INPUT.input(type='email', name='Email', placeholder='Контактный e-mail*')
            p.help-block.help-block-error Ошибка заполнения поля формы
          .form-group.required
            +e.TEXTAREA.textarea(type='text', name='Ваш отзыв', placeholder='Ваш отзыв*')
            p.help-block.help-block-error Ошибка заполнения поля формы

        .form-group.recaptcha
          +b.captcha
        +b.BUTTON.btn--form(type='submit') #{item.button}
        p.help-block.help-block-success #{item.success}
